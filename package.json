{
  "name": "civic-login-lambdas",
  "version": "1.0.0",
  "description": "Integrate civic login in serverless applications",
  "main": "src/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc --reporter=none mocha",
    "coverage": "cross-env FORCE_COLOR=1 nyc report && nyc check-coverage",
    "lint": "eslint --max-warnings=0 .",
    "lint-autofix": "eslint --fix .",
    "ci": "npm run test && npm run coverage && npm run lint"
  },
  "author": "Daniel Kelleher",
  "license": "ISC",
  "dependencies": {
    "civic-sip-api": "civicteam/npm-civic-sip-api.git",
    "co": "^4.6.0",
    "crypto-js": "latest",
    "json-stable-stringify": "latest",
    "jsrsasign": "latest",
    "jwt-js": "latest",
    "lodash": "^4.17.5",
    "unix-timestamp": "latest",
    "uuid": "latest"
  },
  "devDependencies": {
    "winston": "^2.4.2",
    "sinon": "^4.5.0",
    "mocha": "^5.1.1",
    "nyc": "^11.7.1",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "crypto-js": "latest",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "json-stable-stringify": "latest"
  },
  "nyc": {
    "lines": 75,
    "statements": 75,
    "functions": 75,
    "branches": 75,
    "exclude": [
      "test/*"
    ],
    "include": [
      "./src/*"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "mocha": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "max-len": [
        "warn",
        200
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/test/*.js"
          ]
        }
      ],
      "no-plusplus": "warn",
      "no-shadow": [
        2,
        {
          "builtinGlobals": false,
          "hoist": "functions",
          "allow": [
            "response",
            "error"
          ]
        }
      ],
      "consistent-return": 1,
      "no-param-reassign": 0,
      "one-var": 0
    }
  }
}
